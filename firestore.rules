
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Publicly Readable Data ---
    // Anyone can read these collections.
    match /{collection}/{docId} where collection in ['ai_tools', 'blogPosts', 'pricingPlans', 'recent_upgrades'] {
      allow read: if true;
    }

    // --- Protected Data ---

    // USERS collection:
    // - Authenticated users can create their own profile.
    // - Authenticated users can read and update their own profile.
    // - Admins can read/write any user profile.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }

    // PAYMENTS collection:
    // - Authenticated users can create new payment documents.
    // - Only admins can read, update, or delete payments.
    match /payments/{paymentId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Admin Write Rules ---
    // These rules specify who can write to the public collections.

    match /blogPosts/{postId} {
      // Only admins can create, update, or delete blog posts.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /ai_tools/{toolId} {
       // Only admins can create, update, or delete AI tools.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    match /pricingPlans/{planId} {
       // Only admins can create, update, or delete pricing plans.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
