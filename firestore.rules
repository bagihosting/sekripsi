rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can only read/update their own profile. Admins can do anything.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create, delete: if isAdmin();
    }

    // Public collections are readable by anyone, but only writable by admins.
    match /(blogPosts|ai_tools|pricingPlans|recent_upgrades)/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // Payments can be created by any authenticated user.
    // Only admins can read all payments and update them.
    match /payments/{paymentId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }
  }
}
